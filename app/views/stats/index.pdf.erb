<h1><center> My Data:</center></h1>

<style>
  table, th, td {
      border: 1px solid grey;
      border-collapse: collapse;
      font-family: 'Source Sans Pro', sans-serif;
      text-align:center;
  }

  h1 {
    font-family: 'Source Sans Pro', sans-serif;
    color: black;
  }
</style>

<table style ="width:100%">
  <th> Date </th>
  <th> Pain Score </th>
  <th> Food </th>
  <th> Activity </th>
  <th> Exertion </th>
  <th> Notes </th>
  <% if !@painscores.empty? %>
    <% @painscores.each do |f| %>
      <tr>
        <td> <%= f.customdate %>  </td>
        <td> <%= f.score %>       </td>
        <td> <%= f.food %>        </td>
        <td> <%= f.name %>        </td>
        <td> <%= f.exertion %>    </td>
        <td> <%= f.notes %>       </td>
      </tr>
      <% end %>
  <% else %>
  <h1>No Results Yet</h1>
  <% end %>
</table>
